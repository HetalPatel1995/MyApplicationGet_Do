<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color_activity"
    android:orientation="vertical"
    tools:context=".auth.OtpGenerateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:orientation="vertical"
        android:background="@color/background_color">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/getdo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:fontFamily="@font/lato_bold"
            android:text=" Get \n Started..."
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:ems="10"
            android:layout_gravity="center"
            android:hint="   OTP"
            android:layout_marginTop="@dimen/_20sdp"
            android:inputType="number"
            android:background="@color/white"
            android:textColorHint="@color/black2"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="57dp" />

        <Button
            android:id="@+id/OtpGenerate"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_arrow_forward_white_24dp"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_20sdp"
            android:background="@drawable/round_button"
            android:layout_marginTop="@dimen/_50sdp"
            android:drawableLeft="@drawable/ic_arrow_forward_white_24dp" />


        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/editTextCode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-214dp"
            android:visibility="gone"/>


    </LinearLayout>



</LinearLayout>