<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color_activity"
    android:orientation="vertical"
    tools:context=".auth.RegisterMobile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:orientation="vertical"
        android:background="@color/background_color">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/getdo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_70sdp"
            android:fontFamily="@font/lato_bold"
            android:text=" Get \n Started..."
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_40sdp"
        android:orientation="horizontal"
        android:padding="15dp">

        <Spinner
            android:id="@+id/spinnerCountries"
            android:layout_width="@dimen/_60sdp"
            android:background="@color/white"
            android:layout_height="@dimen/_40sdp" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/black"/>

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_weight="2"
            android:background="@color/white"
            android:paddingLeft="@dimen/_15sdp"
            android:digits="0123456789"
            android:hint=" Mobile Number"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="@color/black2" />

    </LinearLayout>

    <Button
        android:id="@+id/BtnRegister"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_arrow_forward_white_24dp"
        android:paddingLeft="@dimen/_15sdp"
        android:paddingRight="@dimen/_20sdp"
        android:background="@drawable/round_button"
        android:layout_marginTop="@dimen/_50sdp"
        android:drawableLeft="@drawable/ic_arrow_forward_white_24dp" />

</LinearLayout>